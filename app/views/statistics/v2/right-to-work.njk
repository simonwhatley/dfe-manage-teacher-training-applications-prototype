{% extends "_layout-statistics.njk" %}

{% set primaryNavId = "statistics" %}
{% set sectionName = "Candidates" %}
{% set pageName = "Right to work or study in the UK" %}

{% block pageTitle %}
{{ pageName }} – {{ serviceName }} – GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    href: "/statistics/v2",
    text: "Statistics"
  }, {
    text: pageName
  }]
}) }}
{% endblock %}

{% block content %}

{% include "./includes/header.njk" %}

<div class="app-filter-layout">
  <div class="app-filter-layout__filter">

    {% include "./includes/filter-panel.njk" %}

  </div>
  <div class="app-filter-layout__content">

    <div class="app-action-bar">
      <div class="app-action-bar__filter"></div>
    </div>

    <div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          <table class="govuk-table">
            <!-- <caption class="govuk-table__caption govuk-table__caption--m">{{ pageName }}</caption> -->
            <thead class="govuk-table__head">
              <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">{{ pageName }}</th>
                <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Number of candidates</th>
              </tr>
            </thead>
            <tbody class="govuk-table__body">
              <tr class="govuk-table__row">
                <td scope="row" class="govuk-table__cell">Yes</td>
                <td class="govuk-table__cell">{{ rightWorkStudyCounts['Yes'] }}</td>
              </tr>
              <tr class="govuk-table__row">
                <td scope="row" class="govuk-table__cell">Not yet, or not sure</td>
                <td class="govuk-table__cell">{{ rightWorkStudyCounts['Not yet, or not sure'] }}</td>
              </tr>
            </tbody>
          </table>

          <p class="govuk-body">
            <a class="govuk-link" href="#">Download <span class="govuk-visually-hidden">candidates’ {{ pageName | lower }}</span> data</a>
          </p>

        </div>
      </div>

    </div>
  </div>
</div>

{% endblock %}
